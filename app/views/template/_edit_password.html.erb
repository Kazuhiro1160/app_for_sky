<main class="main d-flex w-100">
  <div class="container d-flex flex-column">
    <div class="row h-100">
      <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

          <div class="text-center mt-4">
            <h1 class="h2">パスワード更新</h1>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="m-sm-4">
                <p class="text-danger"><%= params[:notice] %></p>
                <%= form_tag(url, method: :"patch") %>
                <div class="form-group">
                  <label>新しいパスワード（6-14）</label>
                  <%= text_field_tag 'part[usr_password]', '', required: true, autocomplete: "off", class: 'form-control form-control-lg',placeholder: "Enter new password" %>
                </div>
                <div class="form-group">
                  <label>パスワード（確認）</label>
                  <%= text_field_tag 'part[password_conf]', '', required: true, autocomplete: "off", class: 'form-control form-control-lg',placeholder: "Enter new password" %>
                </div>
                <div class="text-center mt-3">
                  <%= submit_tag '更新', class: 'btn btn-lg btn-primary' %>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</main>